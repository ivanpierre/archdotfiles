# #---Arrow Keys---# #
bindsym Mod4+Left		focus left
bindsym Mod4+Down		focus down
bindsym Mod4+Up			focus up
bindsym Mod4+Right 		focus right
bindsym Mod4+Shift+Left		move left
bindsym Mod4+Shift+Down		move down
bindsym Mod4+Shift+Up		move up
bindsym Mod4+Shift+Right 	move right

# #---Media Keys---# #
# Volume keys
bindsym Mod4+plus		exec --no-startup-id lmc up 5
bindsym Mod4+Shift+plus		exec --no-startup-id lmc up 15
bindsym Mod4+minus 		exec --no-startup-id lmc down 5
bindsym Mod4+Shift+minus	exec --no-startup-id lmc down 15
bindsym Mod4+less 		exec --no-startup-id lmc prev
bindsym Mod4+Shift+less		exec --no-startup-id lmc replay
bindsym Mod4+greater		exec --no-startup-id lmc next
bindsym Mod4+Shift+greater	exec --no-startup-id lmc next

# For advancing forward/backward in an mpd song
bindsym Mod4+bracketleft 	exec --no-startup-id lmc back 10
bindsym Mod4+Shift+bracketleft 	exec --no-startup-id lmc back 120
bindsym Mod4+bracketright 	exec --no-startup-id lmc forward 10
bindsym Mod4+Shift+bracketright exec --no-startup-id lmc forward 120

# For screenshots and recording
bindsym Print 			exec --no-startup-id maim pic-full-"$(date '+%y%m%d-%H%M-%S').png"
bindsym Shift+Print 		exec --no-startup-id maimpick
bindsym Mod4+Print		exec --no-startup-id dmenurecord
bindsym Mod4+Scroll_Lock	exec --no-startup-id "killall screenkey || screenkey"
bindsym Mod4+Delete		exec $stoprec
bindsym XF86Launch1		exec --no-startup-id xset dpms force off

