# i3 config file

# #---Basic Definitions---# #
for_window [class="^.*"] border pixel 0
for_window [con_id="__focused__"]  border pixel 4

gaps inner 5
gaps outer 5
set $term --no-startup-id $TERMINAL
# set $term $TERMINAL
set $stoprec --no-startup-id dmenurecord kill
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend

# #---Dropdown Windows---# #
# General dropdown window traits. The order can matter.
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_*"] scratchpad show
for_window [instance="dropdown_tmuxdd"] resize set 625 450
for_window [instance="dropdown_dropdowncalc"] resize set 800 300
for_window [instance="dropdown_tmuxdd"] border pixel 3
for_window [instance="dropdown_dropdowncalc"] border pixel 2
for_window [instance="dropdown_*"] move position center

# #---Starting sxhkd Scripts---# #
# exec_always --no-startup-id sudo -A systemctl reload --user sxhkd.service >> ~/error.log 2>> ~/error.log
# exec_always --no-startup-id sudo -A systemctl start sxhkd.service >> ~/error.log 2>> ~/error.log

# #---Starting External Scripts---# #
# mpd startup
exec --no-startup-id mpd
# Setting the background:
exec_always --no-startup-id setbg
# Starts dunst for notifications:
exec --no-startup-id dunst
# Composite manager:
exec --no-startup-id xcompmgr
# Runs the key remapping scripts
exec --no-startup-id remaps
# Unclutter makes the mouse invisible after a brief period
exec --no-startup-id unclutter
# Run the script to update the mpd i3block on change.
exec_always --no-startup-id mpdupdate
# Podboat automatic queue and download
exec_always --no-startup-id podentr

bar {
	font pango:mono 10
	status_command i3blocks
	position top
	mode dock
	modifier None
}

# Don't follow mouse
focus_follows_mouse no

# #---Basic Bindings---# #
bindsym Mod4+Return		exec $term
bindsym Mod4+Shift+Return	exec --no-startup-id samedir

bindsym Mod4+Shift+space 	floating toggle
bindsym Mod4+space		focus mode_toggle

bindsym Mod4+Escape		workspace prev
bindsym Mod4+Shift+Escape 	exec --no-startup-id prompt "Exit i3?" "i3-msg exit"

# bindsym Mod4+BackSpac
bindsym Mod4+Shift+BackSpace	exec --no-startup-id prompt "Reboot computer?" "$reboot"

bindsym Mod4+dead_grave		exec --no-startup-id dmenuunicode
##bindsym Mod4+asciitilde

#STOP/HIDE EVERYTHING:
bindsym Mod4+Shift+Delete	exec --no-startup-id lmc truemute ; exec --no-startup-id lmc pause ; exec --no-startup-id pauseallmpv; workspace 0; exec $term -e htop ; exec $term -e $FILE

# Show selection:
bindsym Mod4+Insert		exec --no-startup-id showclip
##bindsym Mod4+Pause

# #---Letter Key Bindings---# #
bindsym Mod4+Control+x          exec --no-startup-id dmenu -p figlet < /dev/null | figlet | xclip -selection clipboard

bindsym Mod4+q			[con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym Mod4+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

bindsym Mod4+w			exec $term -e nmtui
bindsym Mod4+Shift+w		exec --no-startup-id $BROWSER

bindsym Mod4+e			exec $term -e neomutt && pkill -RTMIN+12 i3blocks
bindsym Mod4+Shift+e		exec --no-startup-id tutorialvids

bindsym Mod4+r 			exec $term -e $FILE
bindsym Mod4+Shift+r		exec --no-startup-id winresize

bindsym Mod4+t			split toggle
bindsym Mod4+Shift+t		gaps inner current set 5; gaps outer current set 5

bindsym Mod4+y			exec $term -e calcurse -D ~/.config/calcurse
bindsym Mod4+Shift+y		exec --no-startup-id i3resize left

bindsym Mod4+u			exec --no-startup-id ddspawn tmuxdd
bindsym Mod4+Shift+u		exec --no-startup-id i3resize down

bindsym Mod4+i 			exec $term -e htop
bindsym Mod4+Shift+i		exec --no-startup-id i3resize up

bindsym Mod4+o			sticky toggle
bindsym Mod4+Shift+o		exec --no-startup-id i3resize right

bindsym Mod4+p			exec --no-startup-id lmc toggle
bindsym Mod4+Shift+p		exec --no-startup-id lmc pause

bindsym Mod4+a			exec --no-startup-id ddspawn dropdowncalc -f mono:pixelsize=24
bindsym Mod4+Shift+a		exec --no-startup-id $term -e pulsemixer

bindsym Mod4+s			gaps inner current plus 5
bindsym Mod4+Shift+s		gaps inner current minus 5

bindsym Mod4+d			exec --no-startup-id dmenu_run
bindsym Mod4+Shift+d		gaps inner current set 0; gaps outer current set 0

set $freeze Distraction-free mode (super+shift+f to reactivate bindings)
mode "$freeze" { bindsym Mod4+Shift+f mode "default"
}

bindsym Mod4+f			fullscreen toggle
bindsym Mod4+Shift+f		mode "$freeze" ;; exec --no-startup-id notify-send "Distraction-free mode activated." "Press Super+Shift+f to return."

bindsym Mod4+g			workspace prev
bindsym Mod4+Shift+g		exec --no-startup-id gimp; workspace $ws5

bindsym Mod4+h			focus left
bindsym Mod4+Shift+h		move left 30

bindsym Mod4+j			focus down
bindsym Mod4+Shift+j		move down 30

bindsym Mod4+k			focus up
bindsym Mod4+Shift+k		move up 30

bindsym Mod4+l			focus right
bindsym Mod4+Shift+l		move right 30

bindsym Mod4+z			gaps outer current plus 5
bindsym Mod4+Shift+z		gaps outer current minus 5

bindsym Mod4+x			exec --no-startup-id mpc pause; exec --no-startup-id pauseallmpv ; exec --no-startup-id i3lock -e -f -c 1d2021 ; exec --no-startup-id xset dpms force off
bindsym Mod4+Shift+x		exec --no-startup-id prompt "Shutdown computer?" "$shutdown"

bindsym Mod4+c			exec --no-startup-id cabl
bindsym Mod4+Shift+c		exec --no-startup-id camtoggle

bindsym Mod4+v			exec $term -e $EDITOR -c "VimwikiIndex"
#bindsym Mod4+Shift+v

bindsym Mod4+b			bar mode toggle
bindsym Mod4+Shift+b		floating toggle; sticky toggle; exec --no-startup-id hover left

bindsym Mod4+n			exec $term -e newsboat && pkill -RTMIN+6 i3blocks
bindsym Mod4+Shift+n		floating toggle; sticky toggle; exec --no-startup-id hover right

bindsym Mod4+m 			exec $term -e ncmpcpp
bindsym Mod4+Shift+m		exec --no-startup-id lmc mute

# #---Workspace Bindings---# #
bindsym Mod4+Home		workspace $ws1
bindsym Mod4+Shift+Home		move container to workspace $ws1
bindsym Mod4+End		workspace $ws10
bindsym Mod4+Shift+End		move container to workspace $ws10
bindsym Mod4+Prior		workspace prev
bindsym Mod4+Shift+Prior	move container to workspace prev
bindsym Mod4+Next		workspace next
bindsym Mod4+Shift+Next		move container to workspace next
bindsym Mod4+Tab		workspace back_and_forth
bindsym Mod4+XF86Back		workspace prev
bindsym Mod4+Shift+XF86Back	move container to workspace prev
bindsym Mod4+XF86Forward	workspace next
bindsym Mod4+Shift+XF86Forward	move container to workspace next
bindsym Mod4+semicolon		workspace next
bindsym Mod4+apostrophe		split horizontal ;; exec $term
# bindsym Mod4+slash		split vertical ;; exec $term
# bindsym Mod4+Shift+slash	kill
bindsym Mod4+backslash		workspace back_and_forth

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym Mod4+1		workspace $ws1
bindsym Mod4+2		workspace $ws2
bindsym Mod4+3		workspace $ws3
bindsym Mod4+4		workspace $ws4
bindsym Mod4+5		workspace $ws5
bindsym Mod4+6		workspace $ws6
bindsym Mod4+7		workspace $ws7
bindsym Mod4+8		workspace $ws8
bindsym Mod4+9		workspace $ws9
bindsym Mod4+0		workspace $ws10

# move focused container to workspace
bindsym Mod4+Shift+1	move container to workspace $ws1
bindsym Mod4+Shift+2	move container to workspace $ws2
bindsym Mod4+Shift+3	move container to workspace $ws3
bindsym Mod4+Shift+4	move container to workspace $ws4
bindsym Mod4+Shift+5	move container to workspace $ws5
bindsym Mod4+Shift+6	move container to workspace $ws6
bindsym Mod4+Shift+7	move container to workspace $ws7
bindsym Mod4+Shift+8	move container to workspace $ws8
bindsym Mod4+Shift+9	move container to workspace $ws9
bindsym Mod4+Shift+0	move container to workspace $ws10

for_window [class="Pinentry"] sticky enable
for_window [class="sent"] border pixel 0px
for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [title="Default - Wine desktop"] floating enable

# Bindings to make the webcam float and stick.
for_window [title="mpvfloat"] floating enable
for_window [title="mpvfloat"] sticky enable
for_window [title="mpvfloat"] border pixel 0
no_focus [title="mpvfloat"]

